<body>

  <div class="store-container">
    <h2>ðŸ›’ Loja Online</h2>
    <div class="products">
      <button onclick="addToCart('Camiseta', 50)">Camiseta - R$50</button>
      <button onclick="addToCart('CalÃ§a', 80)">CalÃ§a - R$80</button>
      <button onclick="addToCart('TÃªnis', 120)">TÃªnis - R$120</button>
      <button onclick="addToCart('BonÃ©', 30)">BonÃ© - R$30</button>
    </div>

    <div class="cart">
      <h3>Carrinho:</h3>
      <ul id="cartItems"></ul>
    </div>

    <button onclick="finalizePurchase()">Finalizar Compra</button>

    <div class="balance" id="balance">ðŸ’° Saldo: R$200,00</div>
    <div class="result" id="result"></div>
  </div>

  <script>
    let saldo = 200.00;
    let carrinho = [];

    function addToCart(produto, preco) {
      carrinho.push({ nome: produto, preco: preco });
      renderCart();
    }

    function renderCart() {
      const cartItems = document.getElementById('cartItems');
      cartItems.innerHTML = '';

      carrinho.forEach(item => {
        const li = document.createElement('li');
        li.textContent = `${item.nome} - R$${item.preco.toFixed(2)}`;
        cartItems.appendChild(li);
      });
    }

    function finalizePurchase() {
      let total = 0;
    
      for (let i = 0; i < carrinho.length; i++) {
        total += carrinho[i].preco;
      }

      const result = document.getElementById('result');
   
      total > saldo 
        ? (result.textContent = "Saldo insuficiente!") 
        : (result.textContent = "Compra realizada com sucesso!", saldo -= total);


      document.getElementById('balance').textContent = `ðŸ’° Saldo: R$${saldo.toFixed(2)}`;

      if (total <= saldo) {
        carrinho = [];
        renderCart();
      }
    }
  </script>

