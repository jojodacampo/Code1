<body>

  <div class="login-container">
    <h2>Login</h2>
    <input type="text" id="username" placeholder="Usu√°rio">
    <input type="password" id="password" placeholder="Senha">

    <div class="buttons">
      <button onclick="togglePassword()">üëÅ Mostrar Senha</button>
      <button onclick="login()">Entrar</button>
    </div>

    <div class="message" id="message"></div>
  </div>

  <script>
    const senhaCorreta = "12345";
    let tentativasRestantes = 3;

    function login() {
      const username = document.getElementById('username').value.trim();
      const password = document.getElementById('password').value;
      const message = document.getElementById('message');

      if (username === "" || password === "") {
        message.style.color = "red";
        message.textContent = "Por favor, preencha todos os campos.";
        return;
      }

      if (password === senhaCorreta) {
        message.style.color = "green";
        message.textContent = `Bem-vindo, ${username}!`;
      } else {
        tentativasRestantes--;
        if (tentativasRestantes > 0) {
          message.style.color = "red";
          message.textContent = `Senha incorreta. Tentativas restantes: ${tentativasRestantes}`;
        } else {
          message.style.color = "red";
          message.textContent = "N√∫mero m√°ximo de tentativas atingido. Usu√°rio bloqueado.";
          document.getElementById('username').disabled = true;
          document.getElementById('password').disabled = true;
        }
      }
    }

    function togglePassword() {
      const passwordField = document.getElementById('password');
      if (passwordField.type === "password") {
        passwordField.type = "text";
      } else {
        passwordField.type = "password";
      }
    }
  </script>

</body>
